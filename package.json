{
  "name": "next-template",
  "private": true,
  "scripts": {
    "build": "next build",
    "clean": "rimraf --glob node_modules dist .next bun.lockb .tsbuildinfo test-results test-coverage-results",
    "copy-env": "cp .env.example .env",
    "dev": "next dev --turbo",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier \"**/*\" --ignore-unknown --list-different",
    "format:write": "prettier \"**/*\" --ignore-unknown --list-different --write",
    "lint": "biome lint --apply ./src/**",
    "prepare": "husky",
    "preview": "next build && next start",
    "start": "next start",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "ui:add": "bun x shadcn-ui@latest add"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,cjs,mjs,json}": [
      "biome lint --apply ."
    ],
    "*": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@biomejs/biome": "^1.7.3",
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-radio-group": "^1.2.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@t3-oss/env-nextjs": "^0.10.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "framer-motion": "^11.3.2",
    "geist": "^1.3.0",
    "lucide-react": "0.381.0",
    "next": "latest",
    "next-themes": "^0.3.0",
    "react": "latest",
    "react-dom": "latest",
    "react-hook-form": "^7.52.1",
    "sharp": "^0.33.3",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@tailwindcss/typography": "^0.5.13",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@testing-library/user-event": "^14.5.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.12.7",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "fluid-tailwind": "^0.3.8",
    "husky": "^9.0.11",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.5",
    "mini-svg-data-uri": "^1.4.4",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-packagejson": "^2.5.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.4",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0",
    "vitest-fail-on-console": "^0.7.0"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
